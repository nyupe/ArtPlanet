<mapper namespace="mybatis.ArtClass">


<!-- 입력폼 -->
 <insert id="classInsert" parameterType="java.util.Map" useGeneratedKeys="true" keyProperty="classNo" keyColumn="classNo">
  	
  	INSERT INTO ARTCLASS(classNo,title,classLevel,timeRequired,numberOfPeople,tuitionFee,classAddress,detailedAddr)
  	VALUES(SEQ_ARTCLASS_CLASSNO.NEXTVAL,#{title},#{classLevel},#{timeRequired},#{numberOfPeople},#{tuitionFee},#{classAddress},#{detailedAddr})


  </insert>
  
  <select id="ClassSelectList" parameterType="java.util.Map" resultType="ArtclassDTO">
     select * from ARTCLASS
  </select>
  
  
